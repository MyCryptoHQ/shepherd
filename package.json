{
  "name": "myc-shepherd",
  "version": "0.0.9",
  "description":
    "Ensure high-availability for your JSON-RPC calls while improving user-experience. Shepherd automatically cancels calls that are taking too long to respond and executes them against fresh provider infrastructure. Shepherd is incredibly configurable — you can set filters on provider infrastructure to ensure that sensitive JSON-RPC calls are contained, dynamically bias against poorly performing provider infrastructure, and more!",
  "main": "dist/shepherd.umd.js",
  "module": "dist/shepherd.es6.js",
  "typings": "dist/lib",
  "scripts": {
    "gulp": "node node_modules/gulp/bin/gulp.js",
    "test": "jest",
    "test:mem": "npm test -- --coverage --silent --logHeapUsage",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "tsc": "tsc --noEmit -p ./tsconfig.json",
    "format":
      "find ./src/ -name '*.ts*' | xargs prettier --write --config ./.prettierrc --config-precedence file-override",
    "remotedev": "remotedev --hostname=localhost --port=8000",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "prebuild": "rimraf dist",
    "build":
      "tsc -p ./tsconfig-build.json --module commonjs && rollup -c rollup.config.ts && npm run gulp",
    "precommit": "lint-staged",
    "prepush": "npm run lint && npm run tsc"
  },
  "lint-staged": {
    "{src,__test__}/**/*.ts": ["npm run format", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MyCryptoHQ/shepherd.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MyCryptoHQ/shepherd/issues"
  },
  "files": ["dist"],
  "homepage": "https://github.com/MyCryptoHQ/shepherd#readme",
  "devDependencies": {
    "gulp": "^3.9.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "path-alias-resolver": "^1.0.3-alpha",
    "prettier": "^1.10.2",
    "remotedev-server": "^0.2.4",
    "rollup": "^0.57.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.12.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.6",
    "@types/remote-redux-devtools": "^0.5.2",
    "@types/url-search-params": "^0.10.1",
    "bn.js": "^4.11.8",
    "btoa": "^1.1.2",
    "isomorphic-fetch": "^2.2.1",
    "jsonschema": "^1.2.2",
    "randombytes": "^2.0.6",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "url-search-params": "^0.10.0",
    "remote-redux-devtools": "^0.5.12"
  },
  "jest": {
    "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1",
      "@test/(.*)": "<rootDir>/__test__/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/providers/etherscan",
      "src/providers/infura",
      "src/providers/rpc",
      "src/providers/custom",
      "src/providers/web3",
      "src/validators",
      "mockNode.ts"
    ]
  }
}
